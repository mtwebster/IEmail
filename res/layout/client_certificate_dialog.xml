<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:orientation="vertical">

		<TextView android:text="@string/account_client_certificate_file"
			android:layout_height="wrap_content" android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?android:attr/textColorPrimary" />

		<Spinner android:id="@+id/certificate_spinner"
			android:layout_height="wrap_content" android:layout_width="match_parent" />

		<TextView android:text="@string/account_client_certificate_password"
			android:layout_height="wrap_content" android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?android:attr/textColorPrimary" />

		<EditText android:id="@+id/certificate_password_edit_text"
			android:inputType="textPassword" android:password="true"
			android:imeOptions="actionDone" android:layout_height="wrap_content"
			android:layout_width="match_parent" />

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_gravity="center_vertical"
			android:orientation="horizontal">

			<Button android:id="@+android:id/import_certificate"
				android:text="@string/okay_action" android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="1" />

			<Button android:id="@+android:id/cancel_certificate"
				android:text="@string/cancel_action" android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="1" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
